        // åˆå§‹åŒ–WebSocketè¿æ¥
        function initWebSocket() {
            try {
                ws = new WebSocket(WS_URL);
                
                ws.onopen = function(event) {
                    console.log('ğŸ”— WebSocketè¿æ¥å·²å»ºç«‹');
                    updateConnectionStatus(true);
