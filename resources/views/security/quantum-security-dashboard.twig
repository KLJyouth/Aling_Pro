        // 初始化威胁趋势图表
        function initThreatTrendsChart() {
            const ctx = document.getElementById('threatTrendsChart').getContext('2d');
            
            // 创建渐变背景
            const gradient = ctx.createLinearGradient(0, 0, 0, 300);
            gradient.addColorStop(0, 'rgba(123, 104, 238, 0.4)');
            gradient.addColorStop(1, 'rgba(123, 104, 238, 0)');
            
            // 模拟数据 - 实际项目中应从API获取
            const weekData = {
                labels: ['6/22', '6/23', '6/24', '6/25', '6/26', '6/27', '6/28'],
                datasets: [
                    {
                        label: '高危威胁',
                        data: [3, 1, 0, 2, 5, 2, 3],
                        borderColor: '#ff4757',
                        backgroundColor: 'rgba(255, 71, 87, 0.1)',
                        borderWidth: 2,
                        pointBackgroundColor: '#ff4757',
                        pointRadius: 4,
                        tension: 0.3
                    },
                    {
                        label: '中危威胁',
                        data: [5, 7, 4, 6, 8, 10, 12],
                        borderColor: '#ff9f43',
                        backgroundColor: 'rgba(255, 159, 67, 0.1)',
                        borderWidth: 2,
                        pointBackgroundColor: '#ff9f43',
                        pointRadius: 4,
                        tension: 0.3
                    },
                    {
                        label: '低危威胁',
                        data: [10, 8, 15, 12, 17, 14, 23],
                        borderColor: '#2ed573',
                        backgroundColor: 'rgba(46, 213, 115, 0.1)',
                        borderWidth: 2,
                        pointBackgroundColor: '#2ed573',
                        pointRadius: 4,
                        tension: 0.3
                    }
                ]
            };
            
            window.threatTrendsChart = new Chart(ctx, {
                type: 'line',
                data: weekData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                            labels: {
                                color: '#ccc',
                                font: {
                                    size: 12
                                },
                                usePointStyle: true,
                                pointStyle: 'circle'
                            }
                        },
                        tooltip: {
                            mode: 'index',
                            intersect: false,
                            backgroundColor: 'rgba(10, 10, 40, 0.8)',
                            titleColor: '#fff',
                            bodyColor: '#ccc',
                            borderColor: '#7b68ee',
                            borderWidth: 1
                        }
                    },
                    scales: {
                        x: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.05)'
                            },
                            ticks: {
                                color: '#999'
                            }
                        },
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: 'rgba(255, 255, 255, 0.05)'
                            },
                            ticks: {
                                color: '#999'
                            }
                        }
                    }
                }
            });
        }
        
        // 更新威胁趋势图表
        function updateThreatTrendsChart(timeRange) {
            // 根据选择的时间范围准备不同的数据
            let labels, highData, mediumData, lowData;
            
            switch(timeRange) {
                case 'day':
                    labels = ['00:00', '03:00', '06:00', '09:00', '12:00', '15:00', '18:00', '21:00'];
                    highData = [0, 0, 1, 2, 0, 1, 3, 1];
                    mediumData = [2, 1, 3, 4, 2, 5, 7, 3];
                    lowData = [3, 2, 4, 6, 5, 8, 10, 7];
                    break;
                case 'month':
                    labels = ['第1周', '第2周', '第3周', '第4周'];
                    highData = [8, 12, 6, 15];
                    mediumData = [20, 25, 18, 30];
                    lowData = [35, 42, 28, 50];
                    break;
                default: // 'week'
                    labels = ['6/22', '6/23', '6/24', '6/25', '6/26', '6/27', '6/28'];
                    highData = [3, 1, 0, 2, 5, 2, 3];
                    mediumData = [5, 7, 4, 6, 8, 10, 12];
                    lowData = [10, 8, 15, 12, 17, 14, 23];
            }
            
            // 更新图表数据
            window.threatTrendsChart.data.labels = labels;
            window.threatTrendsChart.data.datasets[0].data = highData;
            window.threatTrendsChart.data.datasets[1].data = mediumData;
            window.threatTrendsChart.data.datasets[2].data = lowData;
            
            // 重新渲染图表
            window.threatTrendsChart.update();
        }
        
        // 初始化威胁分布图表
        function initThreatDistributionChart() {
            const ctx = document.getElementById('threatDistributionChart').getContext('2d');
            
