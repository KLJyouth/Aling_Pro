                    ],
                    borderWidth: 2,
                    borderColor: 'rgba(10, 10, 40, 0.8)'
                }]
            };
            
            window.threatDistributionChart = new Chart(ctx, {
                type: 'pie',
                data: typeData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'right',
                            labels: {
                                color: '#ccc',
                                font: {
                                    size: 12
                                },
                                padding: 20
                            }
                        },
