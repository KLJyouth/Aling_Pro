# AlingAi Pro 环境配置文件
# 复制此文件为 .env 并根据你的环境进行配置

# 应用配置
APP_NAME="AlingAi Pro"
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost
APP_TIMEZONE=Asia/Shanghai
APP_LOCALE=zh_CN
APP_KEY=base64:CHANGE_THIS_TO_A_RANDOM_32_CHARACTER_STRING

# 数据库配置
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=alingai_pro
DB_USERNAME=root
DB_PASSWORD=
DB_PREFIX=

# Redis缓存配置
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=alingai_pro:

# 缓存配置
CACHE_DRIVER=redis
CACHE_PREFIX=alingai_pro:

# 会话配置
SESSION_DRIVER=redis
SESSION_LIFETIME=7200
SESSION_DOMAIN=
SESSION_SECURE_COOKIE=false

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_TTL=3600
JWT_REFRESH_TTL=604800
JWT_LEEWAY=60
JWT_ISSUER=alingai-pro
JWT_AUDIENCE=alingai-pro-users

# 邮件配置
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@alingai.com
MAIL_FROM_NAME="AlingAi Pro"
MAIL_REPLY_TO_ADDRESS=support@alingai.com
MAIL_REPLY_TO_NAME="AlingAi Support"

# 文件存储配置
FILESYSTEM_DRIVER=local

# 日志配置
LOG_CHANNEL=daily
LOG_LEVEL=info

# 安全配置
FORCE_HTTPS=false
CSRF_PROTECTION=true

# 功能开关
FEATURE_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=true
FEATURE_PASSWORD_RESET=true
FEATURE_ADMIN_PANEL=true
FEATURE_CHAT=true
FEATURE_DOCUMENTS=true

# 第三方服务配置
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.7

# Google服务配置
GOOGLE_ANALYTICS_ID=
GOOGLE_RECAPTCHA_SITE_KEY=
GOOGLE_RECAPTCHA_SECRET_KEY=

# 上传文件配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,webp,pdf,doc,docx,txt,md

# API配置
API_RATE_LIMIT_PER_MINUTE=100
API_RATE_LIMIT_PER_HOUR=2000

# 开发环境专用配置（仅在开发环境下启用）
# APP_ENV=development时下面的配置才生效
DEV_SHOW_ERRORS=true
DEV_ENABLE_PROFILER=true
DEV_ENABLE_DEBUG_BAR=true

# ΰȫ
ZERO_TRUST_ENABLED=true
ZERO_TRUST_SUSPICIOUS_THRESHOLD=50
ZERO_TRUST_DANGEROUS_THRESHOLD=80

# 豸
DEVICE_BINDING_ENABLED=true
MAX_DEVICES_PER_USER=5
REQUIRE_DEVICE_VERIFICATION=true

# ֤
MFA_ENABLED=true
ENFORCE_MFA=false
MFA_SESSION_LIFETIME=1440
MFA_APP_ENABLED=true
MFA_SMS_ENABLED=true
MFA_EMAIL_ENABLED=true
MFA_FINGERPRINT_ENABLED=true

# λðȫ
GEO_SECURITY_ENABLED=true
HIGH_RISK_COUNTRIES="North Korea,Iran,Syria,Sudan,Cuba"
VPN_DETECTION_ENABLED=true

# 簲ȫ
ENFORCE_HTTPS=true
MIN_TLS_VERSION="TLSv1.2"

# Ϊ
BEHAVIOR_ANALYSIS_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_WINDOW_MINUTES=1

# APIȫ
API_KEY_ROTATION_DAYS=90
ENFORCE_API_KEY_ROTATION=true

# ֧ȫ
PAYMENT_REQUIRE_MFA=true
PAYMENT_REQUIRE_DEVICE_VERIFICATION=true
PAYMENT_RISK_THRESHOLD=60

# ȫ־
SECURITY_LOGGING_ENABLED=true
SECURITY_LOG_RETENTION_DAYS=90

# 
SECURITY_ALERTS_ENABLED=true
ALERT_EMAIL_NOTIFICATIONS=true
SECURITY_ADMIN_EMAILS="admin@example.com"
